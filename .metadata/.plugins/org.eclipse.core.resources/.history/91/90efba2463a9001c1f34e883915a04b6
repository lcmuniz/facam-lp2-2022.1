import java.util.Scanner;

public class Eleitor2 {

	public static void main(String[] args) {

		Scanner teclado =  new Scanner(System.in);
		
		System.out.print("Qual a sua idade?");
		
		int idade = teclado.nextInt();
		
		if (idade <= 15) {
			System.out.println("Tenha um bom dia.");
		}
		else if (idade > 15 && idade < 18) {
			System.out.print("Você tem título de eleitor (S/N)?");
			String temTitulo = "S";
			temTitulo = teclado.nextLine();
			if (temTitulo.equals("S")) {
				System.out.println("Você já pode votar!");
			}
		}
		else {
			int anos = 16 - idade;
			System.out.println("Você poderá votar daqui a " + anos + ".");
		}
		
		System.out.println("Tenha um bom dia.");
		
		teclado.close();
		

	}

}
